<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    android:onClick="kuwait"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView00"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:background="#C3CBE2B0"
        android:padding="5dp"
        android:text="''جميع أزهار المستقبل هي في البذور التي تزرعها اليوم''"
        android:textColor="#C3CBE2B0"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/textView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="أكتب موقعك و المكان الذي أخترته من حدائق الأزهار :"
        android:padding="10dp"
        android:layout_marginTop="60dp"
        android:textAlignment="textStart"
        android:textColor="#000"
        android:textSize="23dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="226dp"
android:layout_marginTop="30dp"
        android:layout_height="74dp"
       android:layout_gravity="center"
        android:ems="10"
        android:hint="موقعك"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="226dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="المكان"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/button"
        android:layout_width="176dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:layout_marginTop="34dp"
        android:background="@drawable/custom_button"
        android:text="GoogleMaps" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/googlemaps" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#C3CBE2B0"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        android:text="''جميع أزهار المستقبل هي في البذور التي تزرعها اليوم''"
        android:textColor="#C3CBE2B0"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>